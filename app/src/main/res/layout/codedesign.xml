<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/topMenu"
        android:contentDescription="@null"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bagianatas"/>

        <ImageView
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:layout_marginTop="-270dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/bartiga"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Pagi"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bagas Ramdhan Rusnadi"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:src="@drawable/pp"
            android:layout_width="wrap_content"
            android:cropToPadding="true"
            android:adjustViewBounds="true"
            android:layout_height="130dp"
            android:layout_marginTop="-105dp"
            android:layout_gravity="right"
            android:layout_marginBottom="200dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semangat, Kamu punya tugas Hari ini"
            android:layout_marginTop="-120dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"/>

    <ImageView
        android:contentDescription="@null"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/isikonten"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="List Tugas"
        android:textSize="30dp"
        android:layout_marginLeft="6dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="- Pemrograman Mobile"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:id="@+id/tugas"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="- Pemrograman Mobile"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="- Pemrograman Mobile"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="- Pemrograman Mobile"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/navbar"
        android:layout_marginTop="-140dp"
        android:layout_marginLeft="-10dp"
        />
</LinearLayout>
